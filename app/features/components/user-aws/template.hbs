<div class="view-section">
  <div class="is-heading">
    <h1 class="title is-4">Amazon Details</h1>
    <h2 class="subtitle is-6">
      Required to create/view servers
    </h2>
  </div>

  <form>
    <div class="columns is-multiline">
      <div class="column is-12">
        <label class="label">Access key</label>
        <div class="control">
          <div class="level">
            <div class="level-item">
              {{input
                type="text"
                value=user.awsKey
                class="input"
                placeholder="Aws access key"
                autocomplete="off"
              }}
            </div>
          </div>
        </div>
      </div>

      <div class="column is-12">
        <label class="label">Access secret</label>
        <div class="control">
          <div class="level">
            <div class="level-item">
              {{input
                type="password"
                value=user.awsSecret
                class="input"
                placeholder="Aws secret key"
                autocomplete="off"
              }}
            </div>
          </div>
        </div>
      </div>

      <div class="column is-12">
        <label class="label">Default region</label>
        <div class="control">
          <div class="level">
            <div class="level-item">
              {{input
                type="text"
                value=user.awsRegion
                class="input"
                placeholder="Aws default region"
                autocomplete="off"
              }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>

</div>
